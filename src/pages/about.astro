<script>
const form = document.getElementById('contact-form');
const statusEl = document.getElementById('contact-status');
form?.addEventListener('submit', async (e) => {
  e.preventDefault();
  statusEl && (statusEl.textContent = 'Sending...');
  try {
    const formData = new FormData(form);
    const res = await fetch('/api/contact', { method: 'POST', body: formData });
    const data = await res.json();
    if (data.ok && data.mailto) {
      // trigger email client
      window.location.href = data.mailto;
      statusEl && (statusEl.textContent = 'Opening your email app...');
      form.reset();
    } else {
      throw new Error(data.error || 'Unable to send');
    }
  } catch (err) {
    console.error(err);
    statusEl && (statusEl.textContent = 'There was a problem sending your message.');
  }
});
</script>

